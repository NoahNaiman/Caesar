doctype html
html
	head
		title One server to rule them all

	body
		form(action='/landofmordor', method='POST', enctype='multipart/form-data')
			div.form-field
				label(for='project') Project Name:
					input#project(type='text', name='project', placeholder='Name of your project' required)
			br
			div.form-field
				label(for='email') Email:
					input#email(type='email', name='email', placeholder='youremail@email.com' required)
			br
			div.form-field
				label(for='start') Launch Command:
					input#project(type='text', name='start', placeholder='e.g. npm start, python nameOfProject.py, etc.')
			br
			div.form-field
				label(for='files') Files:
					input#files(type='file', name='files', placeholder='Upload files here', multiple required)
			br
			input(type='submit', value='Submit')